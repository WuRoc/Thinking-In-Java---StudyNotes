public class P10ShowArgs {
	
	
	
	public static void main(String[] args) {
		
		String [] name = {"John Doe","Mary Jane","Peter Pan"};
		

		if(name.length <3) {
			
			System.err.println("Need 3 arguments ");
			
			System.exit(1);
			for(int i=0;i<name.length;i++) {
				
				System.out.println(name[i]);
					
			} 
		}
		
//		for(int i=0;i<name.length;i++) {
//			
//		System.out.println(name[i]);
			
	} 
	}

	

	
	
	


